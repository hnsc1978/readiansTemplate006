<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
  xmlns:core="sap.ui.core">

  <FlexBox id="mainHeader"
           alignItems="Stretch"
           justifyContent="Start"
           wrap="Wrap"
           class="sapUiDemoFlexBoxSizeAdjustmentsZeroWidthItems">
    <VBox alignContent="Start">
      <ObjectStatus icon="sap-icon://action"
                    title="{i18n>mainInfo_Field01}"
                    text="{mainData>/MainInfo/Field01}"
                    state="Success"/>
      <ObjectIdentifier title="{i18n>mainInfo_Field02}" text="{mainData>/MainInfo/Field02}" titleActive="true"/>
      <ObjectAttribute title="{i18n>mainInfo_Field03}" text="{mainData>/MainInfo/Field03}"/>
      <HBox>
        <ObjectAttribute title="{i18n>mainInfo_Field04}"/>
        <ObjectNumber number="{mainData>/MainInfo/Field04}"/>
      </HBox>
      <layoutData>
        <FlexItemData growFactor="1" baseSize="340px"/>
      </layoutData>
    </VBox>
  </FlexBox>
</core:FragmentDefinition>